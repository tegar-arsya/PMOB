<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".SelamatDatang">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:text="Selamat Datang \nDi Aplikasi Pencarian \nRumah Sakit Di Yogyakarta"
            android:textAlignment="center"
            android:textColor="#DFE5E6"
            android:textSize="29dp"
            android:textStyle="bold"
            android:typeface="monospace"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="33dp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/iconrs"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="298dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="16dp"
            />
        <Button
            android:id="@+id/mulai"
            android:layout_width="173dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:layout_marginTop="65dp"
            android:text="Mulai"
            android:textColor="#0909CD"
            android:textStyle="bold"
            android:theme="@style/tombolkedua"
            android:typeface="sans"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="119dp"
            tools:layout_editor_absoluteY="607dp" />
    </LinearLayout>
</ScrollView>